<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    app:layout_constrainedHeight="true"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:context=".ui.Profile.ProfileFragment">

        <TextView
            android:id="@+id/profileFirsName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="38dp"
            android:text="Имя"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8" />

        <TextView
            android:id="@+id/profileLastName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="25dp"
            android:text="Фамилия"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView10" />

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="32dp"
            android:text="Почта"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:text="Номер телефона"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/verifyMsg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="411dp"
            android:layout_height="38dp"
            android:layout_marginBottom="55dp"
            android:onClick="logout"
            android:text="Выйти"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnChangePasswd"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="18dp"
            android:onClick="logout"
            android:text="Смена пароля"
            app:layout_constraintBottom_toTopOf="@+id/btnLogout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bntverifyEmail"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnChangeProfile"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            android:onClick="logout"
            android:text="Изменить профиль"
            app:layout_constraintBottom_toTopOf="@+id/btnLogout"
            app:layout_constraintEnd_toStartOf="@+id/bntverifyEmail"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/bntverifyEmail"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:onClick="logout"
            android:text="Верификация"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btnLogout"
            app:layout_constraintEnd_toStartOf="@+id/btnChangePasswd"
            app:layout_constraintStart_toEndOf="@+id/btnChangeProfile"
            app:layout_constraintTop_toBottomOf="@+id/verifyMsg"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/verifyMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="11dp"
            android:text="Верификация не пройдена"
            android:textColor="#f00"
            android:textSize="20dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/btnChangePasswd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="278dp"
            android:layout_marginBottom="3dp"
            android:text="Имя"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/profileFirsName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView8" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="232dp"
            android:layout_marginBottom="4dp"
            android:text="Фамилия"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/profileLastName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView10" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="261dp"
            android:layout_marginBottom="3dp"
            android:text="Почта"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/profilePhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="3dp"
            android:text="Номер телефона"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/profileEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="39dp"
            android:src="@drawable/ic_baseline_account_circle"
            app:layout_constraintBottom_toTopOf="@+id/imageView10"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_baseline_account_circle"
            app:layout_constraintBottom_toTopOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_baseline_alternate_email"
            app:layout_constraintBottom_toTopOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="66dp"
            android:src="@drawable/ic_baseline_phone"
            app:layout_constraintBottom_toTopOf="@+id/btnChangeProfile"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="74dp"
            android:src="@drawable/car"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

