<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Service.Fragment.AddTableFragment">

    <ImageView
        android:id="@+id/AddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddZapravka" />

    <ImageView
        android:id="@+id/AddZapravka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gas_station"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/InfoService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddService" />

    <TextView
        android:id="@+id/textAddZapravki"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:text="Добавить информацию о заправке"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AddZapravka"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAddService"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:text="Добавить информацию по ремонту"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AddService"
        app:layout_constraintTop_toBottomOf="@+id/textAddZapravki" />

    <TextView
        android:id="@+id/textInfoService"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:text="Посмотреть информацию об автосервисе"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/InfoService"
        app:layout_constraintTop_toBottomOf="@+id/textAddService" />

</androidx.constraintlayout.widget.ConstraintLayout>